# File Locker Environment Configuration
# Copy this file to .env and update values for your environment

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=9010
GRPC_PORT=9011
SERVER_HOST=0.0.0.0

# ============================================
# MinIO Configuration (Object Storage)
# ============================================
MINIO_ENDPOINT=localhost:9012
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=filelocker
MINIO_USE_SSL=false

# ============================================
# Redis Configuration (Cache)
# ============================================
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# Security Settings
# ============================================
# IMPORTANT: Change JWT_SECRET in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SESSION_TIMEOUT=3600

# TLS/HTTPS Configuration
TLS_ENABLED=false
TLS_CERT_FILE=/path/to/cert.pem
TLS_KEY_FILE=/path/to/key.pem

# ============================================
# Feature Flags
# ============================================
AUTO_DELETE_ENABLED=true
AUTO_DELETE_CHECK_INTERVAL=3600  # seconds (1 hour)
MAX_UPLOAD_SIZE=5368709120       # bytes (5 GB)
ENABLE_VIDEO_STREAMING=true
ENABLE_BATCH_UPLOADS=true

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100    # requests per window
RATE_LIMIT_WINDOW=60       # seconds

# ============================================
# Logging
# ============================================
LOG_LEVEL=info             # debug, info, warn, error
LOG_FORMAT=json            # json or text

# ============================================
# Development Settings
# ============================================
DEBUG_MODE=false
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:9010

# ============================================
# Frontend Configuration (Vite)
# ============================================
VITE_API_URL=http://localhost:9010
VITE_GRPC_URL=http://localhost:9011
